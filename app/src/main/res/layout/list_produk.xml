<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    android:id="@+id/list_produk_id"
    android:theme="@style/Base.CardView"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/produk_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Nama"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/produk_gambar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@mipmap/ic_produk" />

        <TextView
            android:id="@+id/text_produk_kategori_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_produk_nama"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/produk_gambar"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Kategori Produk :"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/produk_kategori_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produk_nama"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Kategori Produk"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_produk_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_produk_kategori_produk"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/produk_gambar"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Harga :"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/produk_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produk_kategori_produk"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Harga"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_produk_satuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_produk_harga"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/produk_gambar"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Satuan :"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/produk_satuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produk_harga"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Satuan"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_produk_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_produk_satuan"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/produk_gambar"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Jumlah :"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/produk_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produk_satuan"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Jumlah"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_produk_jumlah_minimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_produk_jumlah"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/produk_gambar"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Jumlah Minimal :"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/produk_jumlah_minimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produk_jumlah"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Jumlah Minimal"
            android:textColor="#FF6C6C6C"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_produk_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/produk_gambar"
            android:fontFamily="@font/baloo"
            android:textColor="#FF6C6C6C"
            android:text="Nama :"
            android:textSize="13dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>