<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    android:id="@+id/list_hewan_id"
    android:theme="@style/Base.CardView"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/hewan_gambar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@mipmap/ic_dog" />

        <TextView
            android:id="@+id/hewan_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Nama"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hewan_tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hewan_nama"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Tanggal Lahir"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hewan_jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hewan_tanggal_lahir"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Jenis"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_hewan_tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_hewan_nama"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/hewan_gambar"
            android:fontFamily="@font/baloo"
            android:text="Tanggal Lahir :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_hewan_jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_hewan_tanggal_lahir"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/hewan_gambar"
            android:fontFamily="@font/baloo"
            android:text="Jenis :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_hewan_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/hewan_gambar"
            android:fontFamily="@font/baloo"
            android:text="Nama :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>