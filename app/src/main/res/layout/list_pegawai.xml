<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    android:id="@+id/list_pegawai_id"
    android:theme="@style/Base.CardView"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/pegawai_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Nama"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pegawai_no_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pegawai_nama"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Nomor Telepon"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pegawai_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pegawai_no_telp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Alamat"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pegawai_tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pegawai_alamat"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Tanggal Lahir"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pegawai_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pegawai_tanggal_lahir"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Role Pegawai"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pegawai_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pegawai_role"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Username"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pegawai_no_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pegawai_nama"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/baloo"
            android:text="Nomor Telepon :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pegawai_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pegawai_no_telp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/baloo"
            android:text="Alamat :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pegawai_tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pegawai_alamat"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/baloo"
            android:text="Tanggal Lahir :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pegawai_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pegawai_tanggal_lahir"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/baloo"
            android:text="Role Pegawai :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pegawai_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pegawai_role"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/baloo"
            android:text="Username :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pegawai_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/baloo"
            android:text="Nama :"
            android:textColor="#FF6C6C6C"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>