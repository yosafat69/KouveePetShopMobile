<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo"
        android:text="Tambah Pegawai"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/pegawai_tambah_gambar"
        android:layout_width="164dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        app:srcCompat="@mipmap/ic_menu_pegawai" />

    <EditText
        android:id="@+id/pegawai_tambah_nama"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pegawai_tambah_gambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Nama"
        android:inputType="textPersonName"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />


    <LinearLayout
        android:id = "@+id/pegawai_add_spinner_layout"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pegawai_tambah_nama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity = "center"
        android:orientation = "vertical">
        <Spinner
            android:id = "@+id/pegawai_add_spinner"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/pegawai_tambah_tanggal_lahir"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pegawai_add_spinner_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:gravity="left|center"
        android:text="Tanggal Lahir"
        android:textSize="18dp"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/pegawai_tambah_alamat"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pegawai_tambah_tanggal_lahir"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Alamat"
        android:inputType="text"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pegawai_tambah_no_telp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pegawai_tambah_alamat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Nomor Telepon"
        android:inputType="number"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pegawai_tambah_username"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pegawai_tambah_no_telp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Username"
        android:inputType="text"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pegawai_tambah_password"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pegawai_tambah_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Password"
        android:inputType="textPassword"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pegawai_tambah_password_confirm"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/pegawai_tambah_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pegawai_tambah_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pegawai_tambah_password_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Tambah"
        android:background="#E2933B"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/baloo"
        android:textStyle="bold"
        android:textSize="20dp"/>


</RelativeLayout>