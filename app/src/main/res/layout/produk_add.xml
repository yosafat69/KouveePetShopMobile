<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo"
        android:text="Tambah Produk"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/produk_tambah_gambar"
        android:layout_width="164dp"
        android:layout_height="176dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        app:srcCompat="@mipmap/ic_produk" />

    <EditText
        android:id="@+id/produk_tambah_nama"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/produk_tambah_gambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Nama"
        android:inputType="textPersonName"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />


    <LinearLayout
        android:id = "@+id/produk_add_spinner_layout"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/produk_tambah_nama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity = "center"
        android:orientation = "vertical">
        <Spinner
            android:id = "@+id/produk_add_spinner"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"/>
    </LinearLayout>

    <com.cottacush.android.currencyedittext.CurrencyEditText
        android:id="@+id/produk_tambah_harga"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/produk_add_spinner_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Harga"
        android:inputType="number"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        app:currencySymbol="Rp"
        app:useCurrencySymbolAsHint="true"/>

    <EditText
        android:id="@+id/produk_tambah_satuan"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/produk_tambah_harga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Satuan"
        android:inputType="text"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/produk_tambah_jmlh"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/produk_tambah_satuan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Jumlah"
        android:inputType="number"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/produk_tambah_jmlh_min"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/produk_tambah_jmlh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Jumlah Minimal"
        android:inputType="number"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/produk_tambah_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/produk_tambah_jmlh_min"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Tambah"
        android:background="#E2933B"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/baloo"
        android:textStyle="bold"
        android:textSize="20dp"/>


</RelativeLayout>