<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="380dp"
        android:layout_height="583dp"
        android:layout_above="@+id/jenis_layanan_tambah"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        app:refreshType="water_drop">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_jenis_layanan"
            android:layout_width="374dp"
            android:layout_height="426dp"
            android:layout_above="@+id/jenis_layanan_tambah"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp" />
    </com.baoyz.widget.PullRefreshLayout>

    <Button
        android:id="@+id/jenis_layanan_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Tambah"
        android:background="#E2933B"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/baloo"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/jenis_layanan_tambah"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_above="@+id/jenis_layanan_add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="jenis_layanan"
        android:inputType="text"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo"
        android:text="jenis_layanan"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp" />

</RelativeLayout>