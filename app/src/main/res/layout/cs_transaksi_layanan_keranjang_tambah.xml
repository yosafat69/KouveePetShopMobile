<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo"
        android:text="Layanan"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/cs_transaksi_layanan_keranjang_tambah_gambar"
        android:layout_width="250dp"
        android:layout_height="268dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@mipmap/ic_layanan_dog" />

    <TextView
        android:id="@+id/cs_transaksi_layanan_keranjang_tambah_name_layanan"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/cs_transaksi_layanan_keranjang_tambah_gambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Layanan"
        android:textSize="23sp"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cs_transaksi_layanan_keranjang_tambah_harga"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/cs_transaksi_layanan_keranjang_tambah_name_layanan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Harga Layanan"
        android:textSize="23sp"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cs_transaksi_layanan_keranjang_tambah_name_hewan"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/cs_transaksi_layanan_keranjang_tambah_harga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Nama Hewan"
        android:inputType="textPersonName"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cs_transaksi_layanan_keranjang_tambah_tanggal_lahir"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/cs_transaksi_layanan_keranjang_tambah_name_hewan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Tanggal Lahir"
        android:textSize="23sp"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
        android:id = "@+id/cs_transaksi_layanan_keranjang_tambah_jenis_hewan"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/cs_transaksi_layanan_keranjang_tambah_tanggal_lahir"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity = "center"
        android:orientation = "vertical">
        <Spinner
            android:id = "@+id/cs_transaksi_layanan_keranjang_tambah_jenis_hewan_spinner"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"/>
    </LinearLayout>

    <EditText
        android:id="@+id/cs_transaksi_layanan_keranjang_tambah_jumlah"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/cs_transaksi_layanan_keranjang_tambah_jenis_hewan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Jumlah"
        android:inputType="number"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold" />


    <Button
        android:id="@+id/cs_transaksi_layanan_keranjang_tambah_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cs_transaksi_layanan_keranjang_tambah_jumlah"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#E2933B"
        android:fontFamily="@font/baloo"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>


