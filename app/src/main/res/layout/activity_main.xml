<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/menu_background">


    <ImageView
        android:id="@+id/menu_pengelolaan"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@mipmap/ic_menu_pengelolaan" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_pengelolaan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/baloo"
        android:text="Pengolahan"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/menu_transaksi"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/menu_pengelolaan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_menu_transaksi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_transaksi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/baloo"
        android:text="Transaksi"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/menu_pelaporan"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/menu_transaksi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_menu_pelaporan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_pelaporan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/baloo"
        android:text="Pelaporan"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/menu_pengadaan"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/menu_pelaporan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_menu_pengadaan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_pengadaan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/baloo"
        android:text="Pengadaan"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo"
        android:text="Kouvee PetShop"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/baloo"
        android:text="Mobile Management"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>